<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your payment method(s)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You can select multiple payment methods. Click again to deselect."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Option -->
    <LinearLayout
        android:id="@+id/cardOptionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card Option Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cardCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept Cash"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/black"
                />

            <ImageView
                android:id="@+id/cashIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/dollar_sign" />
        </LinearLayout>

        <!-- Cash Info Section -->
        <TextView
            android:id="@+id/cashDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paying with cash allows you to pay at delivery."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- PayPal Option -->
    <LinearLayout
        android:id="@+id/paypalOptionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/cardOptionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PayPal Option Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/paypalCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept Whish Money"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/black"/>

            <ImageView
                android:id="@+id/whishIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"

                android:src="@drawable/whish_logo" />
        </LinearLayout>

        <!-- PayPal Info Section -->
        <TextView
            android:id="@+id/paypalDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paying with Wish Money connects to your Wish account for secure payment."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/black"
        android:text="Continue"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/paypalOptionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
